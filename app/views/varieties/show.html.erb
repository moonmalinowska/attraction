<p id="notice"><%= notice %></p>
<%= content_for :title, "Atrakcje przemysłowe w Japonii - wszystkie " + @variety.name %>
<div class="container">
  <div class="container-fluid">
    <%= render template: "layouts/menu" %>

  </div>
  <br/>

  <div class="container">
    <div class="col-md-9 col-sm-7">
      <p>
        <strong class="text-uppercase">

        </strong>
      </p>


      <h2 class="text-uppercase jumbotron ziel"><%= @variety.name %></h2>



      <% if @variety.attractions.count > 0 %>
          <table class="table table-striped table-hover ">

            <tbody>
            <% @variety.attractions.each do |attraction| %>
                <tr class="success">
                  <td class="col-md-3">
                    <%= link_to attraction_path(attraction) do %>
                        <%= image_tag(attraction.picture.url(:thumb), alt: attraction.name+ " - grafika",
                                      width:"150px",  height: "100px", class: "") %>
                    <% end %>
                  </td>
                  <td class="col-md-7"><%= attraction.name %></td>


                  <td class="col-md-2"><%= link_to 'Zobacz więcej', attraction_path(attraction) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      <% else %>

          <div class="alert alert-dismissible alert-danger">

            <h4>Uwaga!</h4>

            <p>Nie posiadamy informacji o tego typu atrakcjach.</p>
          </div>

      <% end %>
      <br>

    </div>

    <div class="col-md-3 col-xs-5 ">
      <%= render template: "layouts/right-side" %>
    </div>

  </div>

  <%= link_to 'Back', attractions_path %>
</div>
<div class="container-fluid">
  <%= render template: "layouts/footer" %>
</div>
</div>